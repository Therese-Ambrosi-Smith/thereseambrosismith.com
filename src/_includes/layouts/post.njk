---
layout: base.njk
---
<div class="prose mx-auto pt-2 pb-8 md:pt-8 md:pb-14">

	<article>
		<header>
			<h1 class="my-0">{{ title }}{%- if draft %} <small class="text-base">[draft]</small>{%- endif %}</h1>
		</header>

    <div class="flex justify-center" style="background: url('/border.gif') repeat-x center">
      <p class="px-2 w-fit bg-body-background post-metadata text-sm text-gray">
        Posted on <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate("LLLL dd, yyyy") }}</time>
      </p>
    </div>

		{{ content | safe }}

	</article>

</div>
<div class="prose mx-auto">

	{%- if collections.posts %}
		<section class="my-12">
			{%- set previousPost = collections.posts | getPreviousCollectionItem %}
			{%- set nextPost = collections.posts | getNextCollectionItem %}
			{%- if nextPost or previousPost %}
				<ul class="links-nextprev list-none p-0 m-0 grid grid-cols-2 gap-8">
					{%- if previousPost %}
						<li class="text-left m-0 p-0">
							<a class="!no-underline group" href="{{ previousPost.url }}">
								<span class="text-sm text-[--tw-prose-body] flex gap-1 items-center justify-start -ml-1">
									{% feather "arrow-up-left", { "class": "h-5 w-5" } %}<span>Previous</span>
								</span>
								<span class="block group-hover:underline text-balance leading-5">{{ previousPost.data.title }}</span>
							</a>
						</li>
					{%- else %}
						<li></li>
					{%- endif %}
					{%- if nextPost %}
						<li class="text-right m-0 p-0">
							<a class="!no-underline group" href="{{ nextPost.url }}">
								<span class="text-sm text-[--tw-prose-body] flex gap-1 items-center justify-end -mr-1">
									<span>Next</span>{% feather "arrow-up-right", { "class": "h-5 w-5" } %}
								</span>
								<span class="block group-hover:underline text-balance leading-5">{{ nextPost.data.title }}</span>
							</a>
						</li>
					{%- else %}
						<li></li>
					{%- endif %}
				</ul>
			{%- endif %}
		</section>
	{%- endif %}

</div>
